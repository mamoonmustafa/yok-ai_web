{
  "version": 2,
  "cleanUrls": true,
  "trailingSlash": false,
  "builds": [
    { "src": "api/*.py", "use": "@vercel/python" },
    { "src": "api/*.js", "use": "@vercel/node" },
    { "src": "*.html", "use": "@vercel/static" },
    { "src": "*.css", "use": "@vercel/static" },
    { "src": "js/*.js", "use": "@vercel/static" }
  ],
  "rewrites": [
    { "source": "/api/dashboard", "destination": "/api/dashboard.py" },
    { "source": "/api/license", "destination": "/api/license.py" },
    { "source": "/api/subscription", "destination": "/api/subscription.py" },
    { "source": "/api/transactions", "destination": "/api/transactions.py" },
    { "source": "/api/paddle-webhook", "destination": "/api/paddle_webhook.py" },
    
    { "source": "/privacypolicy", "destination": "/api/privacypolicy.js" },
    { "source": "/refundpolicy", "destination": "/api/refundpolicy.js" },
    { "source": "/termsofservice", "destination": "/api/termsofservice.js" },
    { "source": "/docs", "destination": "/api/docs.js" },
    { "source": "/price", "destination": "pricing.html" },
    { "source": "/signin", "destination": "signin.html" },
    { "source": "/signup", "destination": "signup.html" },
    { "source": "/dashboard", "destination": "dashboard.html" },
    { "source": "/oops", "destination": "forgot-password.html" },
    { "source": "/account", "destination": "newpwd.html" },
    { "source": "/about", "destination": "about.html" },
    { "source": "/contact", "destination": "contact.html" },
    { "source": "/faq", "destination": "faq.html" },
    { "source": "/cookies", "destination": "/api/cookies.js" }
  ],
  "redirects": [
    { "source": "/pricing.html", "destination": "/price", "permanent": true },
    { "source": "/signin.html", "destination": "/signin", "permanent": true },
    { "source": "/signup.html", "destination": "/signup", "permanent": true },
    { "source": "/dashboard.html", "destination": "/dashboard", "permanent": true },
    { "source": "/forgot-password.html", "destination": "/oops", "permanent": true },
    { "source": "/newpwd.html", "destination": "/account", "permanent": true },
    { "source": "/about.html", "destination": "/about", "permanent": true },
    { "source": "/contact.html", "destination": "/contact", "permanent": true },
    { "source": "/faq.html", "destination": "/faq", "permanent": true }
  ]
}